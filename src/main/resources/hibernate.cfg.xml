<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/learnup</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">postgres</property>

        <property name="connection.pool_size">2</property>
        <property name="connection.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="show_sql">true</property>

        <mapping class="ru.learnup.javaqa.learnupmvn2.jdbc.entities.Steps" />
        <mapping class="ru.learnup.javaqa.learnupmvn2.jdbc.entities.StepsLog" />
    </session-factory>
</hibernate-configuration>